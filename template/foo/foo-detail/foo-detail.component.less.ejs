.amend{
    float: right;
    margin:-7.5px 24px 0 0;
    width: auto;;
    text-align: left;
    >cm-button{
        margin-left: 8px;
    }
}
.particulars{
    padding: 24px;
    min-height:calc(~ '100vh - 105px');
    display: block;
    background: #FFFFFF;
    box-shadow: 0 1px 4px 0 rgba(23,35,61,0.25);
    margin:24px;
    .dataSource{
    height:37px;
    margin:0 -24px 25px;
    padding-left:24px;
    border-bottom: 1px solid rgba(23,35,61,0.10);
    >span{
        font-family: PingFangSC-Medium;
        font-size: 14px;
        color: #17233D;
        line-height: 22px;
        height:22px;
        margin-top:-6px;
        display:inline-block;
    }
}
}
.ant-form-item-label{
        text-align: left;
        height:20px;
        font-family: PingFangSC-Medium;
        font-size: 12px;
        color: #17233D;
        line-height: 20px;
}
::ng-deep {
    .particulars .ant-form-item-control{
        font-family: HelveticaNeue!important;
        font-size: 12px!important;
        color: rgba(23,35,61,0.75)!important;
        line-height: 20px !important;
    }
    .ant-col-2{
        width:80px !important;
    }
}
.ant-form-item{
    margin-bottom:16px;
}
.ant-row{
    height:20px;
}
.ant-form-text{
    width: 50vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


